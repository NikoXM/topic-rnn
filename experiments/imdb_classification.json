{
  "dataset_reader": {
    "type": "imdb_review_language_modeling_reader",
    "tokenizer": {
      "type": "word"
    },
    "words_per_instance": 35
  },
  "train_data_path": "data/train_unlabeled.jsonl",
  "validation_data_path": "tests/fixtures/smoke.jsonl",
  "vocabulary": {
    "max_vocab_size": 10000
  },
  "model": {
    "type": "topic_rnn",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "text_encoder": {
      "type": "gru",
      "input_size": 100,
      "hidden_size": 512
    },
    "topic_dim": 50
  },
  "iterator": {
    "type": "basic",
    "batch_size": 80
  },

  "trainer": {
    "num_epochs": 25,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam"
    }
  }
}
