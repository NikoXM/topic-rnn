{
  "dataset_reader": {
    "type": "imdb_review_reader",
    "tokenizer": {
      "type": "word"
    },
    "words_per_instance": 35
  },
  "train_data_path": "data/train_unsup.jsonl",
  "validation_data_path": "data/valid_unsup.jsonl",
  "vocabulary": {
    "max_vocab_size": 5000
  },
  "model": {
    "type": "topic_rnn",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": true,
        "vocab_namespace": "tokens"
      }
    },
    "text_encoder": {
      "type": "rnn",
      "input_size": 100,
      "hidden_size": 300,
      "num_layers": 2
    },
    "topic_dim": 200,
    "vae_hidden_size": 500
  },
  "iterator": {
    "type": "basic",
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 20,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 0.5,
    "optimizer": {
      "type": "adam"
    }
  }
}
